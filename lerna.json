{
  "packages": [
    "!packages/nextjs",
    "packages/*",
    "examples/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.0.1",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true
    },
    "version": {
      "message": "chore(release): publish %s",
      "allowBranch": "main",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    }
  }
}
